<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:orientation="vertical">


     <androidx.cardview.widget.CardView
         android:layout_width="50dp"
         android:layout_height="50dp"
         app:cardCornerRadius="25dp"
         android:layout_gravity="end"
         android:layout_marginRight="30dp"
         android:layout_marginTop="25dp">


         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:scaleType="center"
             android:background="@drawable/lionel"/>


     </androidx.cardview.widget.CardView>


        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/banner1"
            />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Vamos nos pesar ?"
             android:textSize="30dp"
             android:textStyle="bold"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="20dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/info_24"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:text="Mantenha seu peso sempre atualizado, assim voce podera acompanhar sua evolucao "
            android:drawablePadding="10dp"
            android:drawableTint="@color/primary_dark"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/new_24"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Dados da sua pesagem"
            android:drawablePadding="10dp"
            android:drawableTint="@color/primary_dark"
            android:textColor="@color/primary_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data da pesagem"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2012"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel de atividade"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

         <androidx.cardview.widget.CardView
             android:layout_width="355dp"
             android:layout_height="50dp"
             app:cardBackgroundColor="@color/primary_light"
             android:layout_gravity="center"
             android:layout_marginTop="5dp">

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:drawableEnd="@drawable/arrow_24"
                 android:drawableTint="@color/primary_dark"/>


         </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seu novo peso"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="68 kg"/>

        <Button
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Registrar pesso"
          android:backgroundTint="@color/primary_dark"
            android:layout_marginTop="5dp"/>


    </LinearLayout>



</LinearLayout>